---
interface Props {
    href: string;
    text: string;
}

const { href, text } = Astro.props;
---

<a
    class="text-md
    border-2
    rounded
    p-1
    w-full
    border-black
    dark:bg-grey-600
    dark:text-grey-200
    dark:border-grey-400
    text-center
    transition ease-in-out hover:-translate-y-1 hover:scale-110 duration-100"
    href={href}
>
    {text}</a
>
