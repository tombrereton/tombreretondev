---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import PrimaryButton from "../components/buttons/PrimaryButton.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body class="bg-yellow dark:bg-grey-600 dark:text-grey-200">
        <Header />
        <main
            transition:animate="slide"
            class="flex flex-col items-center p-2 gap-12"
        >
            <h2 class="text-5xl font-pixel text-center mt-12">404</h2>
            <div class="flex flex-col gap-2">
                <p class="text-xl max-w-80 text-center">
                    Dang, this page doesn't exist.
                </p>
                <p class="text-xl max-w-80 text-center">
                    Find your way back below.
                </p>
            </div>
            <div class="flex flex-col gap-4">
                <PrimaryButton href="/" text="Home" />
                <PrimaryButton href="/about" text="About" />
                <PrimaryButton href="/projects" text="Projects" />
                <PrimaryButton href="/blog" text="Blog" />
                <PrimaryButton href="/contact" text="Contact" />
            </div>
        </main>
        <Footer />
    </body>
</html>
