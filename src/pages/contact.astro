---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import PrimaryButtonSmall from "../components/buttons/PrimaryButtonSmall.astro";
import LottieAnimation from "astro-integration-lottie/Lottie.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body class="bg-yellow dark:bg-grey-600 dark:text-grey-200">
        <Header />
        <main
            transition:animate="slide"
            class="flex flex-col items-center p-2 gap-12"
        >
            <div class="flex gap-2 items-center justify-center pl-2">
                <h1 class="text-5xl mt-10 font-bold">Say Hi.</h1>
            </div>
            <div class="container max-w-lg min-h-60">
                <LottieAnimation
                    src="animations/contact.json"
                    autoplay="visible"
                />
            </div>
            <div class="flex flex-col gap-6">
                <PrimaryButtonSmall
                    href=`mailto:&#x6D;&#x61;&#x69;&#x6C;&#x40;&#x74;&#x6F;&#x6D;&#x62;&#x72;&#x65;&#x72;&#x65;&#x74;&#x6F;&#x6E;&#x2E;&#x64;&#x65;&#x76;`
                    text="Email Me"
                />
                <PrimaryButtonSmall
                    href="https://www.linkedin.com/in/tbrereton"
                    text="Message me on LinkedIn"
                />
                <PrimaryButtonSmall
                    href="https://github.com/tombrereton"
                    text="Follow me on Github"
                />
            </div>
        </main>
        <Footer />
        <script>
            document.addEventListener("astro:after-swap", () => {
                window.loadLottie("animations/contact.json");
            });
            window.loadLottie("animations/contact.json");
        </script>
    </body>
</html>
